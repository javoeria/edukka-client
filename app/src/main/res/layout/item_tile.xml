<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/tile_padding">

    <ImageView
        android:id="@+id/tile_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_height"
        android:alpha="0.2"
        android:background="@color/dark_grey" />

    <ImageView
        android:id="@+id/tile_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile1_height"
        android:scaleType="centerCrop"
        tools:src="@drawable/icon1" />

    <TextView
        android:id="@+id/tile_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile2_height"
        android:layout_alignBottom="@+id/tile_background"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/tile_title"
        tools:text="@string/item_title" />
</RelativeLayout>